<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:fadeScrollbars="false"
    android:id="@+id/fragment_worker_add"
    >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="se.evinja.hazeldroid.workers.Fragment_Worker_Add">

        <View android:id="@+id/fake"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerInParent="true"/>


        <ImageView
            android:id="@+id/worker_add_picture"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/worker"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/worker_add_lbl_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/login_credentials"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_below="@+id/worker_add_picture"
            />

        <EditText
            android:id="@+id/task_add_min_work"
            android:inputType="textPersonName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:hint="@string/username"
            android:layout_below="@+id/worker_add_lbl_login"
            android:layout_alignRight="@id/fake"
            android:layout_alignParentLeft="true" />

        <EditText
            android:id="@+id/worker_add_password"
            android:inputType="textPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:hint="@string/password"
            android:layout_below="@+id/worker_add_lbl_login"
            android:layout_alignLeft="@id/fake"
            android:layout_alignParentRight="true" />

        <TextView
            android:id="@+id/worker_add_lbl_firstname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/firstname"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/task_add_min_work" />

        <EditText
            android:id="@+id/worker_add_firstname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black_text"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_below="@+id/worker_add_lbl_firstname"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/worker_add_lbl_lastname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/lastname"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_below="@+id/worker_add_firstname"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:id="@+id/worker_add_lastname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black_text"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_below="@+id/worker_add_lbl_lastname"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/worker_add_lbl_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/position"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_below="@+id/worker_add_lastname"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:id="@+id/worker_add_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black_text"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_below="@+id/worker_add_lbl_position"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/worker_add_lbl_qualifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/qualifications"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/worker_add_position"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <se.evinja.hazeldroid.qualifications.Qualifications_Selector
            android:id="@+id/worker_add_qualifications"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/worker_add_lbl_qualifications" />

        <TextView
            android:id="@+id/worker_add_lbl_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/phone"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_below="@+id/worker_add_qualifications" />

        <EditText
            android:id="@+id/worker_add_phone"
            android:inputType="phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_below="@+id/worker_add_lbl_phone"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/worker_add_lbl_mail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/mail"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_below="@+id/worker_add_phone" />

        <EditText
            android:id="@+id/worker_add_mail"
            android:inputType="textEmailAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_below="@+id/worker_add_lbl_mail"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/worker_add_lbl_birthday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/person_number"
            android:paddingLeft="10dp"
            android:layout_below="@+id/worker_add_mail" />

        <TextView
            style="@android:style/Widget.EditText"
            android:hint="YYYY-MM-DD"
            android:clickable="true"
            android:inputType="none"
            android:id="@+id/worker_add_birthday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_below="@+id/worker_add_lbl_birthday"
            android:layout_toLeftOf="@+id/worker_add_last4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:id="@+id/worker_add_last4"
            android:hint="XXXX"
            android:inputType="number"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_alignTop="@+id/worker_add_birthday"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
</ScrollView>